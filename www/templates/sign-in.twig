{% extends 'base.twig' %}

{% block title %}Sign In{% endblock %}

{% block content %}
    <span data-cy="sign-in__message">
        {% if errors.unauthorized %}
            <p style="color: red;">You must be logged in to access the news page.</p>
        {% endif %}
    </span>
    <form action="/sign-in" method="POST" accept-charset="utf-8" data-cy="sign-in">
        Email address
        <input type="text"
               name="email"
               value="{% if data.email %}{{ data.email }}{% endif %}" data-cy="sign-in__email">
        <span data-cy="sign-up__wrongEmail">
            {% if errors.email %}
                {% for error in errors.email %}
                    <p style="color: red;">{{ error }}</p>
                {% endfor %}
            {% endif %}
        </span>
        <br>
        Password
        <input type="password" name="pass" data-cy="sign-in__password">
        <br>
        <span data-cy="sign-up__wrongPassword">
            {% if errors.pass %}
                {% for error in errors.pass %}
                    <p style="color: red;">{{ error }}</p>
                {% endfor %}
            {% endif %}
        </span>
        <br>
        <input type="submit" value="Sign Up" data-cy="sign-in__btn">
    </form>
{% endblock %}