{% extends "base.twig" %}

{% block title %}News{% endblock %}

{% block content %}
    <h1 data-cy="news-articles__title">News Articles</h1>
    {%- if articles is not empty -%}
        <ul data-cy="news-articles__list">
            {%- for article in articles -%}
                <li data-cy="news-articles__item">
                    <h2 data-cy="news-articles__item-title">
                        {{- article.title -}}
                    </h2>
                    <p data-cy="news-articles__item-date">
                        {{- article.date -}}
                    </p>
                    <p data-cy="news-articles__item-author">
                        {{- article.author -}}
                    </p>
                    <p data-cy="news-articles__item-summary">
                        {{- article.summary -}}
                    </p>
                </li>
            {%- endfor -%}
        </ul>
    {%- endif -%}
{% endblock %}
